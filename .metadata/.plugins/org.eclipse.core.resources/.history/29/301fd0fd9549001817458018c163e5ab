package com.aiconoa.mytube;

import java.util.ArrayList;
import java.util.List;

import com.aiconoa.mytube.Video;

public class VideoRepository {
	/**
	 * Retourne une list de video en fonction en fonction de son id
	 * @param ListVideoId
	 * @return la listVideo ou null si aucune listVideo ne correspond à l'identifiant
	 * 
	 * 
	 */
	
	private List<Video> videos;
	
	
	public VideoRepository(List<Video> videos) {
		super();
		this.videos = videos;
	}

	public List<Video> getVideos() {
		return videos;
	}

	public void setVideos(List<Video> videos) {
		this.videos = videos;
	}

		
	List<Video> findTrending() {

     List<Video> trending = new ArrayList<>();
     long nbVues;
     int i;
     for(i in : videos)
        if(nbVues == 5)
          return trending;
	}

	 List<Video> findRecommended() {

      List<Video> recommended= new ArrayList<>();
      long nbVues, nbLikes;
      int i;
      for(i in : videos)
        if(nbVues == 5 && nbLikes == 3)
          return trending;
	
	}
	
	Video findById(long id) {
      
	ArrayList<Video> videos = new ArrayList<>();
     switch(id)
     case 1:
	     videos.add(new Video("peppa", "cool", 1,5));
     case 2:
		videos.add(new Video("bob", "da", 2,5));
     
     case 3:
		videos.add(new Video("bob", "da", 2,10));

     case 4:
		videos.add(new Video("bob", "da", 2,10));
     
     case 4:
		videos.add(new Video("bob", "da", 2,10));

     defaul:
           
         sout("la video n'existe pas!);
	}

}
